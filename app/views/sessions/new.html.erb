
<div class="user_form">
  <h3> Login </h3>
  <hr>
  <%= form_with scope: :session, url: login_path,local: true  do |form| %>

    <div class="form-group row">
      <%= form.label :email,class:  "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= form.text_field :email,type: "email" ,class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password,class:  "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= form.password_field :password, class: "form-control" %>
      </div>
    </div>
    <hr>

    <%= form.submit "Login", class: "btn btn-success"%>
<%end %>
</div>