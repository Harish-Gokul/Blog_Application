<% flash.each do |name,msg| %>

  <% name == "alert"? class_value = "danger":class_value = "success" %>

  <div class="alert alert-<%=class_value %> alert-dismissible fade show" role="alert">
    <p><%=msg %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

<%end %>