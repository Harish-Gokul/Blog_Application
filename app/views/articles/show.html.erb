<div class="center_div">
  <br>
<h3><%= @article.title %></h3>

  <div class="article_table">
    <div class="card" style="width: 28rem;margin-top:10px ">
      <div class="card-header">
        <h5  style="font-weight: bolder;text-align: center">Description</h5>
        <%= render "shared/tags", obj: @article.categories %>
        <% if @article.main_image.attached? %>
            <%= image_tag @article.main_image.variant(resize_to_limit: [150, nil]) %>
          <% end %>
        <hr>
        <div class="center_div text-success" >
          <small >Created by <%= (link_to @article.user.username,user_path(@article.user.id)) if @article.user %></small>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= @article.description %></p>

      </div>
      <% if logged_in? && ((@article.user.id == current_user.id)||current_user.admin?) %>
    <div class="card-header">
          <button class="btn btn-outline-warning"> <%= link_to "Edit",edit_article_path(@article),{style: "text-decoration: none;color: inherit",class: "card-link"} %></button>
          <button class="btn btn-outline-danger"> <%= link_to "Delete",article_path(@article), {style: "text-decoration: none;color: inherit",class: "card-link",method: :delete } %></button>
        </div>
      <%end %>

  </div>
    <br>
    <button class="btn btn-primary"> <%= link_to "Back to Index",articles_path, {style: "text-decoration: none;color: inherit",class: "card-link" } %></button>


</div>
</div>