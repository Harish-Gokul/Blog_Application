<div class="center_div">
  <br>
<h3><%= @article.title %></h3>

  <div class="article_table">
    <div class="card" style="width: 28rem;margin-top:10px ">
      <div class="card-header">
        <h5  style="font-weight: bolder;text-align: center">Description</h5>
        <hr>
        <div class="center_div text-success" >
          <small >Created by <%= @article.user.username if @article.user %></small>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= @article.description %></p>

      </div>
        <div class="card-header">
          <button class="btn btn-outline-warning"> <%= link_to "Edit",edit_article_path(@article),{style: "text-decoration: none;color: inherit",class: "card-link"} %></button>
          <button class="btn btn-outline-danger"> <%= link_to "Delete",article_path(@article), {style: "text-decoration: none;color: inherit",class: "card-link",method: :delete } %></button>
        </div>


  </div>
    <br>
    <button class="btn btn-outline-primary"> <%= link_to "Back to Index",articles_path, {style: "text-decoration: none;color: inherit",class: "card-link" } %></button>


</div>
</div>