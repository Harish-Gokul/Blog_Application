<div>
  <h1>Welcome to Article management application</h1>
  <button onclick="window.open('/articles/new','_self')" class="btn btn-primary">New Article</button>
</div>
<div class="article_table">
<table class="table table-hover">
  <thead class="thead-dark " >
  <th>Id</th>
  <th>Title</th>
  <th colspan="3">Action</th>
  </thead>
  <tbody>
  <% for element in @articles %>
    <tr>
      <td><%= element.id %></td>
      <td><%= element.title %></td>
       <td> <%= link_to "Show", article_path(element) %></td>
       <td> <%= link_to "Edit", edit_article_path(element) %></td>
       <td> <%= link_to "Delete", article_path(element.id), method: :delete %></td>
  </tr>
  <%end %>

  </tbody>
</table>

</div>