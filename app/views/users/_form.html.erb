
<div class="user_form">
  <h3><%= @user.new_record? ? "Create account": "Edit Account" %> </h3>
  <hr>
  <%= form_with(model: @user,local: true) do |form| %>
    <div class="form-group row">
      <%= form.label :username,class:  "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= form.text_field :username, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :email,class:  "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= form.text_field :email,type: "email" ,class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password,class:  "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= form.password_field :password, class: "form-control" %>
      </div>
    </div>
    <hr>
    <%= form.submit(@user.new_record? ? "Sign Up": "Update Account", class: "btn btn-success")%>

  <%end %>
</div>